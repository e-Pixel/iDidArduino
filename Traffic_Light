/*
  Mario Kart (Still in progress... Wahoo!)
*/

#include <LiquidCrystal.h>
LiquidCrystal lcd(4,5,6,7,8,9);

int x = 0; // for welcome function 
int led_rojo = 0;
int led_verde = 1;
int led_amarillo = 2;

int confirmation = 0;

int button_input = 5;

void setup() {
  Serial.begin(9600);
  pinMode(led_rojo, OUTPUT);
  pinMode(led_verde, OUTPUT);
  pinMode(led_amarillo, OUTPUT);
  pinMode(button_input, INPUT);
  lcd.begin(16,1);
}

void welcome(){
  digitalWrite(x, HIGH);
  delay(1000);
  digitalWrite(x, LOW);
  delay(1000);
  x = x + 1;
  if (x >= 2){
    x = x + 0;
    digitalWrite(x, LOW);
  }
}

void loop() {
  confirmation == digitalRead(button_input);
  if (confirmation == true){
    welcome();
    lcd.print("Welcome to Mario Kart!");
  }
  else{}
}
